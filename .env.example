# =============================================================================
# Bachata Buddy - Blueprint-Based Architecture Environment Variables
# =============================================================================
# This file contains environment variables for local development with Docker Compose
# Copy this file to .env and fill in your actual values
#
# Architecture: API generates blueprints â†’ Job assembles videos
# =============================================================================

# Google Cloud Configuration
# =============================================================================
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1

# Google API Keys
# =============================================================================
# Gemini API - Natural language understanding and explanations
# Get your API key at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-gemini-api-key-here

# Database Configuration (PostgreSQL)
# =============================================================================
# For local development with Docker Compose
DB_NAME=bachata_buddy
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432

# For production (Cloud SQL)
# DB_HOST=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME
# DB_PASSWORD=your-secure-password

# Vector Search Configuration
# =============================================================================
# Cache TTL for FAISS index in seconds (default: 3600 = 1 hour)
MOVE_EMBEDDINGS_CACHE_TTL=3600

# Number of top similar moves to return (default: 50)
VECTOR_SEARCH_TOP_K=50

# Enable GPU acceleration for FAISS (optional, requires FAISS-GPU)
# Options: true, false
FAISS_USE_GPU=false

# Number of cells to visit during search for IVF indices (optional)
# Higher values = more accurate but slower (default: 10)
FAISS_NPROBE=10

# Django Configuration
# =============================================================================
DJANGO_SECRET_KEY=local-dev-secret-key-change-in-production
DJANGO_DEBUG=True
DJANGO_SETTINGS_MODULE=api.settings
ENVIRONMENT=local

# For production
# DJANGO_DEBUG=False
# ALLOWED_HOSTS=your-domain.com,*.run.app

# Cloud Storage Configuration
# =============================================================================
# For production (Google Cloud Storage)
GCS_BUCKET_NAME=your-bucket-name

# YOLOv8 Pose Detection Configuration
# =============================================================================
YOLOV8_MODEL=yolov8n-pose.pt
YOLOV8_CONFIDENCE=0.3
YOLOV8_DEVICE=cpu
YOLOV8_IOU_THRESHOLD=0.5
YOLOV8_MAX_DET=10

# Video Processing Job Configuration (for local testing)
# =============================================================================
# These are used when running: docker-compose --profile job run job
TASK_ID=test-task-123
USER_ID=1

# Blueprint JSON (passed by API, contains all choreography parameters)
# This is automatically generated by the backend and passed to the job
# BLUEPRINT_JSON={"task_id":"...","song":{...},"moves_used":[...],"video_output":{...}}

# Frontend Configuration
# =============================================================================
# API URL for React frontend
VITE_API_URL=http://localhost:8000

# For production
# VITE_API_URL=https://your-api-domain.run.app
