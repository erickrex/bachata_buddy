# Environment Configuration
# Copy this file to .env and fill in your values

# Environment type: "local" or "cloud"
ENVIRONMENT=local

# Elasticsearch Configuration
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX=bachata_move_embeddings
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_USE_SSL=false
ELASTICSEARCH_VERIFY_CERTS=true
ELASTICSEARCH_MAX_CONNECTIONS=10
ELASTICSEARCH_TIMEOUT=30
ELASTICSEARCH_RETRY_ON_TIMEOUT=true

# MMPose Configuration
MMPOSE_CHECKPOINT_PATH=./checkpoints
MMPOSE_CONFIDENCE=0.3
MMPOSE_HAND_DETECTION=true

# Google Cloud Configuration (only needed when ENVIRONMENT=cloud)
# GCP_PROJECT_ID=your-project-id
