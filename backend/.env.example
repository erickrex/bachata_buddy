# =============================================================================
# Django REST API - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# =============================================================================

# Django Configuration
# =============================================================================
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
DJANGO_SETTINGS_MODULE=api.settings
ENVIRONMENT=local

# For production (AWS App Runner)
# DEBUG=False
# ENVIRONMENT=production
# ALLOWED_HOSTS=your-api-domain.awsapprunner.com

# Database Configuration (PostgreSQL)
# =============================================================================
# For local development (native)
DB_NAME=bachata_buddy
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# For Docker Compose
# DB_HOST=db

# For production (AWS RDS Aurora)
# DB_NAME=bachata_buddy
# DB_USER=postgres
# DB_PASSWORD=your-secure-password
# DB_HOST=your-rds-cluster.cluster-xxxxx.us-east-1.rds.amazonaws.com
# DB_PORT=5432
# DB_SSLMODE=require  # SSL/TLS mode for RDS: disable, allow, prefer, require, verify-ca, verify-full

# Google API Keys
# =============================================================================
# Gemini API - Natural language understanding
# Get your API key at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-gemini-api-key-here

# OpenAI API Keys
# =============================================================================
# OpenAI API - Agent orchestration and parameter extraction
# Get your API key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Agent Service Configuration
# =============================================================================
# Enable/disable agent orchestration (default: True)
AGENT_ENABLED=True

# Timeout for agent workflow execution in seconds (default: 300 = 5 minutes)
AGENT_TIMEOUT=300

# Vector Search Configuration
# =============================================================================
# Cache TTL for FAISS index in seconds (default: 3600 = 1 hour)
MOVE_EMBEDDINGS_CACHE_TTL=3600

# Number of top similar moves to return (default: 50)
VECTOR_SEARCH_TOP_K=50

# Number of cells to visit during search for IVF indices (optional)
# Higher values = more accurate but slower (default: 10)
FAISS_NPROBE=10

# Storage Configuration
# =============================================================================
# Storage backend: 'local' or 's3'
STORAGE_BACKEND=local

# For local development (uses local filesystem)
# STORAGE_BACKEND=local

# For production (AWS S3)
# STORAGE_BACKEND=s3
# AWS_STORAGE_BUCKET_NAME=your-media-bucket-name
# AWS_REGION=us-east-1
# AWS_CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net
# 
# AWS Credentials (optional if using IAM roles in App Runner)
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key
#
# Note: In AWS App Runner, use IAM roles instead of access keys for better security

# Elasticsearch Configuration
# =============================================================================
# For local development (Docker Compose)
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_INDEX=bachata_move_embeddings

# For production (AWS Elasticsearch/OpenSearch Serverless)
# ELASTICSEARCH_HOST=your-elasticsearch-endpoint.us-east-1.es.amazonaws.com
# ELASTICSEARCH_API_KEY=your-api-key
# ELASTICSEARCH_INDEX=bachata_move_embeddings

# CORS Configuration
# =============================================================================
# Allowed origins for CORS (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# For production (AWS CloudFront)
# CORS_ALLOWED_ORIGINS=https://your-cloudfront-domain.cloudfront.net

# API URL Configuration
# =============================================================================
# For local development
# API_URL=http://localhost:8001

# For production (AWS App Runner)
# API_URL=https://your-api-domain.awsapprunner.com

# JWT Configuration
# =============================================================================
# Access token lifetime in minutes (default: 60)
JWT_ACCESS_TOKEN_LIFETIME=60

# Refresh token lifetime in days (default: 7)
JWT_REFRESH_TOKEN_LIFETIME=7

# Rate Limiting Configuration
# =============================================================================
# Requests per minute per user (default: 100)
RATE_LIMIT_PER_MINUTE=100

# Logging Configuration
# =============================================================================
# For local development
LOG_LEVEL=DEBUG
DJANGO_LOG_LEVEL=INFO

# For production (AWS CloudWatch)
# LOG_LEVEL=INFO
# DJANGO_LOG_LEVEL=WARNING
