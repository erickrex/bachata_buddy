# =============================================================================
# React Frontend - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# =============================================================================

# API Configuration
# =============================================================================
# URL of the Django REST API backend
# For local development with Docker Compose
VITE_API_URL=http://localhost:8000

# For local development (native)
# VITE_API_URL=http://localhost:8000

# For production (Cloud Run)
# VITE_API_URL=https://your-api-domain.run.app

# Application Configuration
# =============================================================================
# Application name (displayed in UI)
VITE_APP_NAME=Bachata Buddy

# Environment (development, staging, production)
VITE_ENVIRONMENT=development

# Feature Flags
# =============================================================================
# Enable/disable features for testing
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=true

# For production
# VITE_ENABLE_ANALYTICS=true
# VITE_ENABLE_DEBUG_MODE=false

# Polling Configuration
# =============================================================================
# Task status polling interval in milliseconds (default: 2000)
VITE_POLL_INTERVAL=2000

# Maximum polling duration in milliseconds (default: 600000 = 10 minutes)
VITE_MAX_POLL_DURATION=600000
