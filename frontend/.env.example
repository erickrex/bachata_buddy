# =============================================================================
# React Frontend - Environment Variables
# =============================================================================
# Copy this file to .env for local development
# For production, set these variables in your deployment platform (Cloud Run)
# =============================================================================

# API Configuration
# =============================================================================
# URL of the Django REST API backend
# REQUIRED: Must be set for the application to function

# For local development with Docker Compose
VITE_API_URL=http://localhost:8000

# For local development (native)
# VITE_API_URL=http://localhost:8000

# For staging environment
# VITE_API_URL=https://api-staging.bachatabuddy.com

# For production (Cloud Run)
# VITE_API_URL=https://api.bachatabuddy.com

# API timeout in milliseconds (default: 30000 = 30 seconds)
VITE_API_TIMEOUT=30000

# Application Configuration
# =============================================================================
# Application name (displayed in UI)
VITE_APP_NAME=Bachata Buddy

# Environment (development, staging, production)
# REQUIRED: Used for conditional behavior and logging
VITE_ENVIRONMENT=development

# Application version (automatically set by CI/CD)
# VITE_APP_VERSION=1.0.0

# Feature Flags
# =============================================================================
# Enable/disable features for testing and gradual rollout

# Enable analytics tracking (Google Analytics, etc.)
VITE_ENABLE_ANALYTICS=false

# Enable debug mode (shows detailed error messages, logs)
VITE_ENABLE_DEBUG_MODE=true

# Enable service worker for offline support (future feature)
VITE_ENABLE_SERVICE_WORKER=false

# For staging
# VITE_ENABLE_ANALYTICS=true
# VITE_ENABLE_DEBUG_MODE=true
# VITE_ENABLE_SERVICE_WORKER=false

# For production
# VITE_ENABLE_ANALYTICS=true
# VITE_ENABLE_DEBUG_MODE=false
# VITE_ENABLE_SERVICE_WORKER=true

# Polling Configuration
# =============================================================================
# Task status polling interval in milliseconds (default: 2000)
VITE_POLL_INTERVAL=2000

# Maximum polling duration in milliseconds (default: 300000 = 5 minutes)
VITE_MAX_POLL_DURATION=300000

# Security Configuration
# =============================================================================
# Content Security Policy mode (report-only, enforce)
# In development, use report-only to avoid blocking during development
VITE_CSP_MODE=report-only

# For production, enforce CSP
# VITE_CSP_MODE=enforce

# Storage Configuration
# =============================================================================
# Google Cloud Storage bucket for video files (if different from API)
# VITE_GCS_BUCKET_URL=https://storage.googleapis.com/bachata-buddy-videos

# CDN Configuration
# =============================================================================
# CDN URL for static assets (optional, for production optimization)
# VITE_CDN_URL=https://cdn.bachatabuddy.com

# Monitoring and Logging
# =============================================================================
# Sentry DSN for error tracking (production)
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Log level (debug, info, warn, error)
VITE_LOG_LEVEL=debug

# For production
# VITE_LOG_LEVEL=error

# =============================================================================
# Build-time Variables
# =============================================================================
# These are set during the build process and baked into the bundle

# Build timestamp (automatically set by CI/CD)
# VITE_BUILD_TIMESTAMP=2025-11-10T12:00:00Z

# Git commit SHA (automatically set by CI/CD)
# VITE_GIT_COMMIT_SHA=abc123def456

# =============================================================================
# Notes
# =============================================================================
# 1. All variables must be prefixed with VITE_ to be exposed to the client
# 2. Never commit sensitive data (API keys, secrets) to this file
# 3. Use Secret Manager for production secrets
# 4. Variables are embedded at build time, not runtime
# 5. Changing variables requires rebuilding the application
